@using Capstone.Web.Models;
@model List<Park>
@{
    ViewBag.Title = "Index";
}

<h2>Welcome to The World's Best National Park Weather Forecast Application</h2>

<div>
    @foreach (var item in Model)
    {
        <table class="table table-hover">
            <tr>
                <td class="park-name" colspan="2"><a href="@Url.Action("Detail", "Home", new { parkCode = item.ParkCode })" style="color: black">@item.Name</a></td>
            </tr>
            <tr>
                <td class="main-picture">
                    <a href="@Url.Action("Detail", "Home", new { parkCode = item.ParkCode})">
                        <img src="@Url.Content("~/Content/img/park/" + item.ParkCode + ".jpg")" />
                    </a>
                </td>
                <td class="description">@item.Description <br /><span class="location">Location:</span> @item.State</td>
            </tr>
        </table>
    }
</div>
